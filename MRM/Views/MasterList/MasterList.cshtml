@model MRM.Database.Model.MasterCampaign
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Master Campaining List";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
   <style type="text/css">
       padding{
        padding:4px;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("MasterList", "MasterList", FormMethod.Post))
        {
            <h4>Master Campaigning Details</h4>
            <hr />
            <div class="table-responsive">
                <table cellpadding="0" cellspacing="0" class="table table-bordered">
                    <thead class="header-background-color">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Campaign Desc.</th>
                            <th>Status</th>
                            <th>Start Date</th>
                            <th>End Date</th>

                        </tr>
                    </thead>
                    @foreach (var item in Model.MasterCampaigns)
                {
                        <tbody>
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.CampaignDescription</td>
                                <td>@item.Status</td>
                                <td>@item.StartDate</td>
                                <td>@item.EndDate</td>
                            </tr>
                        </tbody>
                    }
                </table>
                </div>
                <br />
                <table cellpadding="0" cellspacing="0">
                    <tr>
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            <td class="td-padding">
                                @if (i != Model.CurrentPageIndex)
                                {
                                    <a href="javascript:PagerClick(@i);">@i</a>
                                }
                                else
                                {
                                    <span>@i</span>
                                }
                            </td>
                        }
                    </tr>
                </table>
                <input type="hidden" id="hfCurrentPageIndex" name="currentPageIndex" />
                }
                <script type="text/javascript">
                    function PagerClick(index) {
                        document.getElementById("hfCurrentPageIndex").value = index;
                        document.forms[0].submit();
                    }
                </script>
            </div>
</body>
</html>