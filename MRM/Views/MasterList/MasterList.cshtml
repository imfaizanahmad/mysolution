@model MRM.Database.Model.MasterCampaign
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Master Campaining List";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
    <style>
        fieldset {
            border: 1px solid #DDD;
            padding: 0 1.4em 1.4em 1.4em;
            margin: 25px 0 1.5em 0;
        }

        legend {
            font-size: 1.2em;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("MasterList", "MasterList", FormMethod.Post))
        {
            <fieldset>
                <legend>Master Campaign Details</legend>
                <div>
                    <table class="table table-bordered" data-resizable-columns-id="demo-table">
                        <thead class="header-background-color">
                            <tr>
                                <th>Master Campaign ID</th>
                                <th>Name</th>
                                <th style="width:350px">Master Campaign Description</th>
                                <th>Status</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                                @foreach (var item in Model.MasterCampaigns)
                                {
                                    <tr>
                                        <td>M-@item.Id</td>
                                        <td>@Html.ActionLink((item.Name), "ChildListById", "ChildList", new { Id = item.Id }, null)</td>
                                        <td>@item.CampaignDescription</td>
                                        <td>@item.Status</td>
                                        <td>@item.StartDate</td>
                                        <td>@item.EndDate</td>
                                        <td>
                                        <input type="button" class="btn btn-block btn-danger btn-sm" value="Delete" onclick="location.href='@Url.Action( "MasterCampaign", "MasterCampaign")'" />
                                        </td>
                                    </tr>

                                }
                        </tbody>
                    </table>
                </div>
               
                <div class="row" style="padding-top:10px">
                    <div class="col-md-11">
                        <table cellpadding="0" cellspacing="0">
                            <tr>
                                @for (int i = 1; i <= Model.PageCount; i++)
                                {
                                    <td class="td-padding">
                                        @if (i != Model.CurrentPageIndex)
                                        {
                                            <a href="javascript:PagerClick(@i);">@i</a>
                                        }
                                        else
                                        {
                                            <span>@i</span>
                                        }
                                    </td>
                                }
                            </tr>
                        </table>
                        <input type="hidden" id="hfCurrentPageIndex" name="currentPageIndex" />
                    </div>
                    <div class="col-md-1">
                        <input type="button" class="btn btn-block btn-primary btn-sm" value="Back" onclick="location.href='@Url.Action("Index", "MasterCampaign")'" style="width: 180%;height: 40px;margin-left: -85%;" />

                    </div>
                </div>
            </fieldset>
        }

              
            </div>
</body>
</html>

<script type="text/javascript">
    function PagerClick(index)
    {
        document.getElementById("hfCurrentPageIndex").value = index;
        document.forms[0].submit();
    }

</script>