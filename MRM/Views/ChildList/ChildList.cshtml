@model MRM.Database.Model.ChildCampaign
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Child Campaining List";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        fieldset {
            border: 1px solid #DDD;
            padding: 0 1.4em 1.4em 1.4em;
            margin: 25px 0 1.5em 0;
        }

        legend {
            font-size: 1.2em;
            font-weight: bold;
        }

        .btn-edit {
            width: 50px !important;
            float: left;
        }

        .btn-view {
            width: 50px !important;
            float: left;
            margin-top: 0% !important;
            margin-left: 3%;
        }

        .btn-delete {
            width: 80px !important;
            float: right;
            margin-top: 0% !important;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("ChildList", "ChildList", FormMethod.Post))
        {
            <fieldset>
                <legend>Sub Campaign Details</legend>
                <div class="table-responsive">
                    <table cellpadding="0" cellspacing="0" class="table table-bordered">
                        <thead class="header-background-color">
                            <tr>
                                <th>Sub Campaign ID</th>
                                <th>Name</th>
                                <th style="width:30%">Sub Campaign Description</th>
                                <th>Status</th>
                                <th style="width:10%;">Start Date</th>
                                <th style="width:10%;">End Date</th>
                                <th style="width:16%;">Action</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model.ChildCampaigns)
                        {
                            <tbody>
                                <tr>
                                    <td>C@(item.Id.ToString("0000000"))</td>
                                    <td>@(item.Name==null?"----":item.Name)</td>
                                    <td>@item.CampaignDescription</td>
                                    <td>@(item.Status == "Complete" ? "Active" : "Save Draft") </td>
                                    <td>@(item.StartDate?.ToString("MM/dd/yyyy") ?? string.Empty)</td>
                                    <td>@(item.EndDate?.ToString("MM/dd/yyyy") ?? string.Empty)</td>
                                    <td>
                                        @Html.ActionLink("View / Edit", "ChildCampaign", "ChildCampaign", new { id = item.Id}, new { })
                                        @if (item.Status != "Complete")
                                        {
                                            <input type="button" class="btn btn-block btn-primary btn-sm btn-delete" value="Delete" onclick="if (confirm('Are you sure you want to delete?')) location.href = '@Url.Action("ChildList", "ChildList", new {Id = item.Id, @Type = "Delete"})'" />
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
                <div class="row" style="padding-top:10px">
                    <div class="col-md-11">
                        
                        
                        <ul class="pagination">
                            @for (int i = 1; i <= Model.PageCount; i++)
                            {
                                    
                                if (i != Model.CurrentPageIndex)
                                {
                                    <li>
                                        <a href="javascript:PagerClick(@i);">@i</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="active">
                                        <a href="javascript:PagerClick(@i);">@i</a>
                                    </li>
                                }
                            }

                        </ul>
                        <input type="hidden" id="hfCurrentPageIndex" name="currentPageIndex"/>
                    </div>
                    <div class="col-md-1">
                        <input type="button" class="btn btn-block btn-primary btn-sm" value="Back" onclick="location.href='@Url.Action("Index", "MasterCampaign")'" style="width: 180% !important;height: 40px;margin-left: -85%;" />

                    </div>
                </div>
            </fieldset>
        }
        <script type="text/javascript">
            function PagerClick(index) {
                document.getElementById("hfCurrentPageIndex").value = index;
                document.forms[0].submit();
            }
        </script>
    </div>
</body>
</html>