@model MRM.ViewModel.ChildCampaignViewModel

<div>
<form id="frmChildCampaign">
@Html.HiddenFor(m => m.Id, new { @Value = Model.Id })
@Html.HiddenFor(m => m.Status, new { @Value = Model.Status })
@Html.HiddenFor(m => m.MCStartDate, new { @Value = Model.MCStartDate })
@Html.HiddenFor(m => m.MCEndDate, new { @Value = Model.MCEndDate })
        <section class="content-header"></section>
        <section class="content">
            <!-- SELECT2 EXAMPLE -->
            <div class="box box-default">
                <div class="box-header with-border">                    
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <fieldset>
                        <legend>Sub Campaign<span class="text-danger" style="float:right;font-size:x-small">Note: Mandatory fields is marked with red aestric (*)</span></legend>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Master Campaign</label><span class="text-danger">*</span><br />
                                    @Html.DropDownListFor(m => m.MasterCampaignId, new SelectList(Model.MasterViewModels, "Id", "Name",
                                   Model.MasterCampaignId),
                                  Model.Id != 0 && Model.Status == "Complete" ?
                                            (object)new { disabled = "disabled", @class = "chosen-single form-control" } :
                                            (object)new { @class = "chosen-single form-control"} )
                                    <div class="validmsgMastercampaign"></div>
                                </div>
                            </div>                    
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Sub Campaign Name</label><span class="text-danger">*</span>
                                    @Html.TextBoxFor(m => m.Name,
                                  (Model.Id != 0 && Model.Status == "Complete") ?
                                            (object)new { disabled = "disabled", @class = "form-control" } :
                                            (object)new { @class = "form-control"}
                                   )
                                    <div class="validmsgSubCamp"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Sub Campaign Description<span class="text-danger">*</span></label>
                                    @Html.TextAreaFor(m => m.CampaignDescription, (Model.Id != 0 && Model.Status == "Complete") ?
                                        (object)new { disabled = "disabled", @class = "form-control" } :
                                        (object)new { @class = "form-control", maxlength = 500, onkeypress = "return alpha(event)" })
                                    <div class="validmsgSubCampDesc"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Theme</label>  <br />
                                    @Html.ListBoxFor(m => m.Themes_Id, new MultiSelectList(Model.ThemeViewModels, "Id", "Name", Model.Themes_Id), (Model.Id != 0 && Model.Status == "Complete") ?
                                            (object)new { disabled = "disabled", @class = "chosen-select form-control" } :
                                            (object)new { @class = "chosen-select form-control" }) <a data-next-stage="select" data-target-id="Themes_Id" data-select-all="selectunselect" href="javascript:void(0);">Select All</a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Geography</label><span class="text-danger">*</span><br />
                                    @Html.ListBoxFor(m => m.Geographys_Id, new MultiSelectList(Model.GeographyViewModels, "Id", "Name", Model.Geographys_Id), (Model.Id != 0 && Model.Status == "Complete") ?
                                            (object)new { disabled = "disabled", @class = "chosen-select form-control" } :
                                            (object)new { @class = "chosen-select form-control" }) <a data-next-stage="select" data-target-id="Geographys_Id" data-select-all="selectunselect" href="javascript:void(0);">Select All</a>
                                    <div class="validmsgbusinesGeography"></div>
                                </div>
                            </div>
                        </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Start Date</label><span class="text-danger lb-sm">(Format: MM/DD/YYYY) *</span>
                            <div class="form-group">
                                <div class="col-md-6 date datealign mrm-cal">
                                    <div class="input-group input-append date">
                                        @Html.TextBoxFor(m => m.StartDate, (Model.Id != 0 && Model.Status == "Complete") ?
                                            (object)new { disabled = "disabled", @class = "form-control mrm-cal", @maxlength = "10", @placeholder = "MM/DD/YYYY" } :
                                            (object)new { @class = "form-control mrm-cal", @maxlength = "10", @placeholder = "MM/DD/YYYY" })
                                        <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>
                                </div>
                                <div class="validmsgSdate"></div>
                      
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>End Date</label><span class="text-danger lb-sm">(Format: MM/DD/YYYY) *</span>
                            <div class="form-group">
                                <div id="dvEndDate" class="col-md-6 form-group date datealign mrm-cal">
                                    <div class="input-group input-append date">
                                        @Html.TextBoxFor(m => m.EndDate, (Model.Id != 0 && Model.Status == "Complete") ?
                                            (object)new { disabled = "disabled", @class = "form-control mrm-cal", @maxlength = "10", @placeholder = "MM/DD/YYYY" } :
                                            (object)new { @class = "form-control mrm-cal", @maxlength = "10", @placeholder = "MM/DD/YYYY" })
                                        <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>
                                </div>
                                <div class="validmsgEdate"></div><div class="validmsgDatecompare"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6"></div>
                        <div class="col-md-6"><div class="validmsgDateMCcompare"></div></div>
                    </div>
                          
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Campaign Type<span class="text-danger">*</span></label><br />
                                    @Html.EnumDropDownListFor(m=>m.CampaignTypes,(Model.Id != 0 && Model.Status == "Complete") ?
                                        (object)new { disabled = "disabled", @class = "chosen-single form-control" } :
                                        (object)new { @class = "chosen-single form-control"} )
                                    <div class="validmsgsubcampaigntype"></div>
                                </div>
                            </div>
                            <div class="col-md-6">

                            </div>
                        </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Business Group</label><span class="text-danger">*</span><br />
                                            @Html.ListBoxFor(m => m.BusinessGroups_Id, new MultiSelectList(Model.BusinessGroupViewModels, "Id", "Name", Model.BusinessGroups_Id), (Model.Id != 0 && Model.Status == "Complete") ?
                                            (object)new { disabled = "disabled", @class = "chosen-select form-control" } :
                                            (object)new { @class = "chosen-select form-control"})
                                            <div class="validmsgbusinesGp"></div>
                                            <div class="validmsgSingleBGselect"></div>
                                        </div>

                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Segment</label><span class="text-danger">*</span><br />
                                            @Html.ListBoxFor(m => m.Segments_Id, new MultiSelectList(Model.SegmentViewModels, "Id", "Name", Model.Segments_Id), (Model.Id != 0 && Model.Status == "Complete") ?
                                            (object)new { disabled = "disabled", @class = "chosen-select form-control" } :
                                            (object)new { @class = "chosen-select form-control" })
                                            <div class="validmsgbusinesSegment"></div>
                                            <div class="validmsgSingleSegment"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Business Line</label><span class="text-danger">*</span><br />
                                            @Html.ListBoxFor(m => m.BusinessLines_Id, new MultiSelectList(Model.BusinessLineViewModels, "Id", "Name", Model.BusinessLines_Id), (Model.Id != 0 && Model.Status == "Complete") ?
                                            (object)new { disabled = "disabled", @class = "chosen-select form-control" } :
                                            (object)new { @class = "chosen-select form-control" }) <a data-next-stage="select" data-target-id="BusinessLines_Id" data-select-all="selectunselect" href="javascript:void(0);">Select All</a>
                                            <div class="validmsgbusinesLine"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Industry</label><span class="text-danger">*</span><br />
                                            @Html.ListBoxFor(m => m.Industries_Id, new MultiSelectList(Model.IndustryViewModels, "Id", "Name", Model.Industries_Id), (Model.Id != 0 && Model.Status == "Complete") ?
                                            (object)new { disabled = "disabled", @class = "chosen-select form-control" } :
                                            (object)new { @class = "chosen-select form-control" }) <a data-next-stage="select" data-target-id="Industries_Id" data-select-all="selectunselect" href="javascript:void(0);">Select All</a>
                                            <div class="validmsgbusinesIndustry"></div>
                                        </div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Budget<span class="text-danger">*</span></label>
                                            @Html.TextBoxFor(m => m.Budget, (Model.Id != 0 && Model.Status == "Complete") ?
                                                (object)new { disabled = "disabled", @class = "form-control " } :
                                                (object)new { @class = "form-control " })
                                            <div class="validmsgBudget"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Spend</label><br />
                                            @Html.TextBoxFor(m => m.Spend, (Model.Id != 0 && Model.Status == "Complete") ?
                                                (object)new { disabled = "disabled", @class = "form-control", @maxlength = "10" } :
                                                (object)new { @class = "form-control", @maxlength = "10" })
                                            <div class="validmsgSpend"></div>
                                        </div>
                                    </div>
                                </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="pull-right">Benchmark</label>  
                        </div>
                        <div class="col-md-6">

                        </div>
                    </div>
                        <div class="row">
                            <div class="col-md-9" style="margin-left: 130px;margin-right: 150px">
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <td><label>Pipeline Metric</label></td>
                                            <td><label>Goal</label></td>
                                            <td><label>Low</label></td>
                                            <td><label>High</label></td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><label>MIL</label></td>
                                            <td>@Html.TextBoxFor(m => m.MILGoal, (Model.Id != 0 && Model.Status == "Complete") ?
                                                    (object)new { disabled = "disabled", @class = "form-control", @maxlength = "50" } :
                                                    (object)new { @class = "form-control", @maxlength = "50", onkeypress = "numericvalidate(event)" })</td>
                                            <td>@Html.TextBoxFor(m => m.MILLow, (Model.Id != 0 && Model.Status == "Complete") ?
                                                    (object)new { disabled = "disabled", @class = "form-control", @maxlength = "50" } :
                                                    (object)new { @class = "form-control", @maxlength = "50", onkeypress = "numericvalidate(event)" })</td>
                                            <td>@Html.TextBoxFor(m => m.MILHigh, (Model.Id != 0 && Model.Status == "Complete") ?
                                                    (object)new { disabled = "disabled", @class = "form-control", @maxlength = "50" } :
                                                    (object)new { @class = "form-control", @maxlength = "50", onkeypress = "numericvalidate(event)" })</td>
                                        </tr>
                                        <tr>
                                            <td><label>MGL</label></td>
                                            <td>@Html.TextBoxFor(m => m.MGLGoal, (Model.Id != 0 && Model.Status == "Complete") ?
                                                    (object)new { disabled = "disabled", @class = "form-control", @maxlength = "50" } :
                                                    (object)new { @class = "form-control", @maxlength = "50", onkeypress = "numericvalidate(event)" })</td>
                                            <td>@Html.TextBoxFor(m => m.MGLLow, (Model.Id != 0 && Model.Status == "Complete") ?
                                                    (object)new { disabled = "disabled", @class = "form-control", @maxlength = "50" } :
                                                    (object)new { @class = "form-control", @maxlength = "50", onkeypress = "numericvalidate(event)" }) </td>
                                            <td>@Html.TextBoxFor(m => m.MGLHigh, (Model.Id != 0 && Model.Status == "Complete") ?
                                                    (object)new { disabled = "disabled", @class = "form-control", @maxlength = "50" } :
                                                    (object)new { @class = "form-control", @maxlength = "50", onkeypress = "numericvalidate(event)" })</td>
                                        </tr>
                                        <tr>
                                            <td><label>MIO</label></td>
                                            <td>@Html.TextBoxFor(m => m.MIOGoal, (Model.Id != 0 && Model.Status == "Complete") ?
                                                    (object)new { disabled = "disabled", @class = "form-control", @maxlength = "50" } :
                                                    (object)new { @class = "form-control", @maxlength = "50", onkeypress = "numericvalidate(event)" })</td>
                                            <td>@Html.TextBoxFor(m => m.MIOLow, (Model.Id != 0 && Model.Status == "Complete") ?
                                                    (object)new { disabled = "disabled", @class = "form-control", @maxlength = "50" } :
                                                    (object)new { @class = "form-control", @maxlength = "50", onkeypress = "numericvalidate(event)" }) </td>
                                            <td>@Html.TextBoxFor(m => m.MIOHigh, (Model.Id != 0 && Model.Status == "Complete") ?
                                                    (object)new { disabled = "disabled", @class = "form-control", @maxlength = "50" } :
                                                    (object)new { @class = "form-control", @maxlength = "50", onkeypress = "numericvalidate(event)" })</td>
                                        </tr>
                                        <tr>
                                            <td><label>MGO</label></td>
                                            <td>@Html.TextBoxFor(m => m.MGOGoal, (Model.Id != 0 && Model.Status == "Complete") ?
                                                    (object)new { disabled = "disabled", @class = "form-control", @maxlength = "50" } :
                                                    (object)new { @class = "form-control", @maxlength = "50", onkeypress = "numericvalidate(event)" })</td>
                                            <td>@Html.TextBoxFor(m => m.MGOLow, (Model.Id != 0 && Model.Status == "Complete") ?
                                                    (object)new { disabled = "disabled", @class = "form-control", @maxlength = "50" } :
                                                    (object)new { @class = "form-control", @maxlength = "50", onkeypress = "numericvalidate(event)" })</td>
                                            <td>@Html.TextBoxFor(m => m.MGOHigh, (Model.Id != 0 && Model.Status == "Complete") ?
                                                    (object)new { disabled = "disabled", @class = "form-control", @maxlength = "50" } :
                                                    (object)new { @class = "form-control", @maxlength = "50", onkeypress = "numericvalidate(event)" })</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                       
                    </fieldset>

                <fieldset>                   
                    <div class="form-group">
                        <div class="row " style="padding-top: 10px">
                            <div class="col-md-4"></div>
                            <div class="col-md-8"> 
                                
                                @if (Model.Id == 0)
                                {
                                    <div class="col-md-3"><input type="button" class="btn btn-primary col-sm-12" value="Back" onclick="location.href = '@Url.Action("Index", "MasterCampaign")'"/></div>
                                }
                                else
                                {
                                    <div class="col-md-3"><input type="button" class="btn btn-primary col-sm-12" value="Back" onclick="location.href = '@Url.Action("ChildCampaignList", "ChildCampaign")'"/></div>
                                } 
                                @if (Model.Id != 0 && Model.Status == "Save Draft")
                                {
                                    <div class="col-md-3">
                                        <input type="button" Id="btnDeleteChild" name="button" value="Delete Draft" class="btn btn-primary col-sm-12" onclick="return confirm('Are you sure you want to delete?')" />
                                    </div>
                                }  
                                @if (Model.Status != "Complete")
                                {
                                    <div class="col-md-3">
                                        <input type="button" Id="btnSaveDraftChild" name="button" value="Save Draft" class="btn btn-primary col-sm-12" />
                                    </div>
                                    <div class="col-md-3">
                                        <input type="button" Id="btnSubmitChild" name="button" value="Submit" class="btn btn-primary col-sm-12" />
                                    </div>
                                }                                                            
                            </div>
                        </div>
                    </div>
                </fieldset>
                    <!-- /.row -->
                </div>
                <!-- /.box-body -->
            </div>

        </section>
    </form>
</div>

