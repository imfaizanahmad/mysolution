
@{
    ViewBag.Title = "ChildCampaign";
}

<div>
    <form id="myform">

        @*<div id="mydiv" data-ng-show="loading">
                <div class="loader"></div>
            </div>*@
        <section class="content-header"></section>

        <section class="content">
            <!-- SELECT2 EXAMPLE -->
            <div class="box box-default">
                <div class="box-header with-border">
                     <h3 class="box-title" style="padding:10px 7px 0px 0px">Child Campaign</h3>
                    <hr />
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Business Group*</label>
                                @Html.DropDownListFor(m => m.BusinessGroup, new SelectList(m.BusinessGroup, "Value", "Text"))
                            </div>
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>Segment*</label>

                                @Html.DropDownListFor(m => m.Segment, new SelectList(m.Segment, "Value", "Text"))
                            </div>

                            <!-- /.form-group -->
                        </div>
                        <!-- /.col -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Business Line*</label>

                                @Html.DropDownListFor(m => m.BusinessLine, new SelectList(m.BusinessLine, "Value", "Text"))

                            </div>
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>Geography*</label>

                                @Html.DropDownListFor(m => m.Geography, new SelectList(m.Geography, "Value", "Text"))
                            </div>
                            <!-- /.form-group -->
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Industry*</label>

                               @Html.DropDownListFor(m => m.Industry, new SelectList(m.Industry, "Value", "Text"))

                            </div>
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>Theme</label>

                                @Html.DropDownListFor(m => m.Theme, new SelectList(m.Theme, "Value", "Text"))
                            </div>
                            <!-- /.form-group -->
                        </div>


                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Budget</label>

                                @Html.TextBox(m => m.Budget, new { @class = "form-control" })

                            </div>
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>Spend*</label>

                                @Html.TextBox(m => m.Spend, new { @class = "form-control" })
                            </div>
                            <!-- /.form-group -->
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Target New Pilpeline*</label>

                                @Html.TextBox(m => m.TargetNewPilpeline, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                <label>Target Touch Pilpeline*</label>
                                                               
                                @Html.TextBox(m => m.TargetTouchPilpeline, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Child Champaign Name*</label>
                                                             
                                @Html.TextBox(m => m.ChildChampaignName, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Child Champaign Naming*</label>
                                                              
                                @Html.TextBox(m => m.ChildChampaignNaming, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Child Champaign Description*</label>

                             
                                @Html.TextBox(m => m.ChildChampaignDescription, new { @class = "form-control" })
                            </div>
                         
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.box-body -->
            </div>





            <div class="row">
                <div class="col-md-3">
                    <button class="btn btn-block btn-primary btn-lg">Submit</button>
                </div>
                <div class="col-md-5"></div>
                <div class="col-md-4"></div>
            </div>
        </section>
    </form>
</div>

