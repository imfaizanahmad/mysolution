@model MRM.Model.ChildCampaignVM
@{
    ViewBag.Title = "ChildCampaign";
}

<div>
@using (Html.BeginForm("ChildCampaign", "ChildCampaign", FormMethod.Post, new { id = "myform" }))
{
    <form>

        @*<div id="mydiv" data-ng-show="loading">
                <div class="loader"></div>
            </div>*@
        <section class="content-header"></section>

        <section class="content">
            <!-- SELECT2 EXAMPLE -->
            <div class="box box-default">
                <div class="box-header with-border">
                    
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <fieldset>
                        <legend>Sub Campaign</legend>
                        <div class="row">
                            <div class="col-md-6">

                                <div class="form-group">
                                    <label>Master Campaign</label>
                                    @Html.DropDownListFor(m => m.MasterCamPaigns, new SelectList(Model.MasterCamPaigns, "Id", "Name"), new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>BG Led</label>
                                    @Html.DropDownList("BGLed", new List<SelectListItem>

                 {
                    new SelectListItem{ Text="Yes", Value = "1" },
                    new SelectListItem{ Text="No", Value = "0" }
                 }, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Business Group*</label>
                                    @Html.DropDownListFor(m => m.BusinessGroups, new SelectList(Model.BusinessGroups, "Id", "Name"), new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label>Geography*</label>

                                    @Html.DropDownListFor(m => m.Geographys, new SelectList(Model.Geographys, "Id", "Name"), new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label>Status</label>
                                    @Html.TextBoxFor(m => m.Status, new { @class = "form-control" })

                                </div>

                                <div class="form-group">
                                    <label>Child Champaign Name*</label>

                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label>Child Champaign Description*</label>

                                    @Html.TextBoxFor(m => m.ChildChampaignDescription, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Target New Pilpeline*</label>

                                    @Html.TextBoxFor(m => m.TargetNewPilpeline, new { @class = "form-control" })

                                </div>

                                <div class="form-group">
                                    <label>Budget</label>

                                    @Html.TextBoxFor(m => m.Budget, new { @class = "form-control" })

                                </div>


                            </div>
                            <!-- /.col -->

                            <div class="col-md-6">

                                <div class="form-group">
                                    <label>Segment*</label>

                                    @Html.DropDownListFor(m => m.Segments, new SelectList(Model.Segments, "Id", "Name"), new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Business Line*</label>

                                    @Html.DropDownListFor(m => m.BusinessLines, new SelectList(Model.BusinessLines, "Id", "Name"), new { @class = "form-control" })

                                </div>


                                <div class="form-group">
                                    <label>Industry*</label>

                                    @Html.DropDownListFor(m => m.Industries, new SelectList(Model.Industries, "Id", "Name"), new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label>Theme</label>

                                    @Html.DropDownListFor(m => m.Themes, new SelectList(Model.Themes, "Id", "Name"), new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label>Start Date</label>
                                    @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control" })

                                </div>
                                <div class="form-group">
                                    <label>End Date</label>
                                    @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Target Touch Pilpeline*</label>

                                    @Html.TextBoxFor(m => m.TargetTouchPilpeline, new { @class = "form-control" })
                                </div>
                                <!-- /.form-group -->
                                <div class="form-group">
                                    <label>Spend*</label>

                                    @Html.TextBoxFor(m => m.Spend, new { @class = "form-control" })
                                </div>
                                <!-- /.form-group -->

                            </div>



                            <!-- /.col -->
                        </div>

                    </fieldset>
                    <fieldset>
                        <div class="row" style="padding-top:10px">
                            <div class="col-md-6">
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-3">
                                    <input type="button" class="btn btn-block btn-primary btn-lg" value="Back" onclick="location.href='@Url.Action("Index", "MasterCampaign")'" />
                                </div>
                                <div class="col-md-3">
                                    <button Id="btnsubmit" class="btn btn-block btn-primary btn-lg">Submit</button>

                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <!-- /.row -->
                </div>
                <!-- /.box-body -->
            </div>

        </section>
    </form>
}
</div>

<script src="~/Scripts/jquery-1.10.2.intellisense.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/datepicker3.css" rel="stylesheet" />
<script src="~/Content/bootstrap-datepicker.js"></script>
<script>

$(document).ready(function () {
    $("#btnsubmit").click(function (e) {
        $.ajax({
        type: 'post',
        dataType: 'json',
        url: 'http://localhost:53263/ChildCampaign/Save',
        data: $("#myform").serialize(),
        success: function (data) {
            {
                alert(data);
            }
    },
});
    });
});



$('#StartDate').datepicker({
    autoclose: true
});
$('#EndDate').datepicker({
    autoclose: true
});
</script>


<style>
    fieldset {
        border: 1px solid #DDD;
        padding: 0 1.4em 1.4em 1.4em;
        margin: 25px 0 1.5em 0;
    }

    legend {
        font-size: 1.2em;
        font-weight: bold;
    }
</style>